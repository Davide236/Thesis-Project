<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
  <!--Page used to allow users to either login or signup to the website-->
	<title>Account</title>

	<link rel="stylesheet" href="../css/Account.css">
    <link rel="stylesheet" href="../css/General.css">

    <!--BOOTSTRAP Links-->
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    
</head>
<body>
    <%- include ("./partials/Navbar") %>
    <%- include ("./partials/FlashMessage") %>
    
    <div class="container">
        <div class="row">
          <!--Signup-->
            <div class="col-6 signupDiv">
                <h3>Create your account</h3>
                <form action="/user/signup" method="POST" class="validated-form">
                    <!--Name -->
                    <div class="form-group">
                        <label>Full Name</label>
                        <input type="text" class="form-control register-input" id="name" name="fullName"
                          placeholder="Your name" required>
                     </div>
                     <!-- Email -->
                      <div class="form-group">
                        <label>Email</label>
                        <input id="email" type="email" class="form-control register-input" name="username"
                          placeholder="youremail@gmail.com" required>
                      </div>
                      <!-- Password -->
                      <div class="form-group">
                        <label>Password</label>
                          <input type="password" pattern="(?=^.{8,}$)((?=.*\d)|(?=.*\W+))(?![.\n])(?=.*[A-Z])(?=.*[a-z]).*$" class="form-control register-input" name="password" id="password"
                          required>
                        <div class="invalid-feedback">
                          Password needs to have a number and upper case letter
                        </div>
                      </div>
                      <button type="submit">Create Account</button>
                </form>
            </div>
            <!--Login-->
            <div class="col-6">
                <h3>Login to your account</h3>
                <form action="/user/login" method="POST" class="validated-form">
                    <div class="form-input">
                      <div class="form-group mt-5">
                        <label for="email">E-mail</label>
                        <input type="email" id="email" class="form-control" name="username" placeholder="Email" required>
                      </div>
                      <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" class="form-control" name="password" placeholder="Password" required>
                      </div>
                      <p>If you forgot your password <span onclick="openPasswordForm()">Click here</span> to receive a new one.</p>
                    </div>
                    <button  type="submit">Log in</button>
                  </form>
                  <!--Password reset form-->
                  <div class="form-popup" id="passwordForm">
                    <form action="/user/passwordreset" class="form-container" method="POST">
                      <h3>Reset your Password</h3>
                  
                      <div class="form-group mt-5">
                        <label for="email">E-mail</label>
                        <input type="email" id="email" class="form-control" name="username" placeholder="Email" required>
                      </div>
                  
                      <button type="submit">Send Email</button>
                      <button type="button" onclick="closePasswordForm()">Close</button>
                    </form>
                  </div>
            </div>
        </div>
    </div>
    <script src="../js/Account.js"></script>
</body>
</html>